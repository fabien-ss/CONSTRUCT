@{
  Layout = "_BlankLayout";
  ViewData["Title"] = "Register Basic - Pages";
}

@model AspnetCoreMvcFull.Models.DTO.RegisterDto

@section PageStyles {
<link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}

@* ************** Content ************** *@

<div class="container-xxl">
  <div class="authentication-wrapper authentication-basic container-p-y">
    <div class="authentication-inner">

      <!-- Register Card -->
      <div class="card">
        <div class="card-body">
          <!-- Logo -->
          <div class="app-brand justify-content-center">
            <a href="/" class="app-brand-link gap-2">
              <span class="app-brand-logo demo">@await Html.PartialAsync("../_Partials/_Macros")</span>
              <span class="app-brand-text demo text-body fw-bold">@TempData.Peek("appName")</span>
            </a>
          </div>
          <!-- /Logo -->
          <h4 class="mb-2">Adventure starts here ðŸš€</h4>
          <p class="mb-4">Make your app management easy and fun!</p>

          <form id="formAuthentication" class="mb-3" asp-action="RegisterBasic" method="POST">
            <div class="mb-3">
              <label for="Name" asp-for="Name" class="form-label">Name</label>
              <input type="text" asp-for="Name" asp-items="ViewBag.Name" class="form-control" id="Name" name="Name" placeholder="Enter your name" autofocus>
              <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
              <label for="FistName" asp-for="FirstName" class="form-label">FirstName</label>
              <input type="text" asp-for="FirstName" asp-items="ViewBag.FirstName" class="form-control" id="FistName" name="FistName" placeholder="Enter your username">
              <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="mb-3">
              <label for="email" class="form-label" asp-for="Email">Email</label>
              <input type="text" class="form-control" asp-for="Email" asp-items="ViewBag.Email" id="email" name="email" placeholder="Enter your email">
              <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="mb-3 form-password-toggle">
              <label asp-for="Birth" class="form-label" for="password">Birth</label>
              <input asp-for="Birth" asp-items="ViewBag.Birth" type="date" id="birth" class="form-control" name="birth" aria-describedby="birth"/>
              <span class="text-danger" asp-validation-for="Birth"></span>
            </div>

            <div class="mb-3 form-password-toggle">
              <label asp-for="Password" class="form-label" for="password">Password</label>
              <div class="input-group input-group-merge">
                <input asp-for="Password" asp-items="ViewBag.Password" type="password" id="password" class="form-control" name="password" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password"/>
                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
              </div>
              <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="mb-3 form-password-toggle">
              <label asp-for="PasswordValidation" class="form-label" for="password">Validation</label>
              <div class="input-group input-group-merge">
                <input asp-for="PasswordValidation" asp-items="ViewBag.PasswordValidation" type="password" id="password" class="form-control" name="password" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password"/>
                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
              </div>
              <span class="text-danger" asp-validation-for="PasswordValidation"></span>
            </div>

            <div class="mb-3">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="terms-conditions" name="terms">
                <label class="form-check-label" for="terms-conditions">
                  I agree to
                  <a href="javascript:void(0);">privacy policy & terms</a>
                </label>
              </div>
            </div>
            <button class="btn btn-primary d-grid w-100">
              Sign up
            </button>
          </form>

          <p class="text-center">
            <span>Already have an account?</span>
            <a href="/Auth/LoginBasic">
              <span>Sign in instead</span>
            </a>
          </p>
        </div>
      </div>
      <!-- Register Card -->
    </div>
  </div>
</div>
