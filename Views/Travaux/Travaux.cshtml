@using AspnetCoreMvcFull.Models.Entities
@{
  List<DevisParMaison> devisParMaisons = (List<DevisParMaison>)ViewData["DevisParMaison"];
}

<div class="card">
  <h5 class="card-header">Tavaux en cours</h5>
  <div class="table-responsive text-nowrap">
    <table class="table table-dark">
      <thead>
        <tr>
          <th>Prestation</th>
          <th>Code</th>
          <th>Prix unitaire</th>
          <th>Etat</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody class="table-border-bottom-0">
      @foreach (DevisParMaison d in devisParMaisons)
      {
        <tr>
          <td><img src="/img/construction/outils.png" width="30px" class="rotation"/> <span class="fw-medium">@d.Prestation</span></td>
          <td>@d.Code</td>
          <td>@d.PrixUnitaire</td>
          <td><span class="badge bg-label-primary me-1">Active</span></td>
          <td>
            <div class="dropdown">
              <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown"><i class="bx bx-dots-vertical-rounded"></i></button>
              <div class="dropdown-menu">
                <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
              </div>
            </div>
          </td>
        </tr>
      }
      </tbody>
    </table>
  </div>
</div>
