<div class="card mb-4">
   <div class="card-body">
     <div class="col-lg-4 col-md-6 " style="margin: auto; text-align: center">
       <h1>Purge database</h1>
       <small class="text-light fw-medium">Delete all data</small>
       <div class="mt-3">
         <button type="button" class=" btn-danger-sup" data-bs-toggle="modal" data-bs-target="#modalToggle">
           Delete
         </button>


         <!-- Modal 1-->
         <div class="modal fade" id="modalToggle" aria-labelledby="modalToggleLabel" tabindex="-1" style="display: none;" aria-hidden="true">
           <div class="modal-dialog modal-dialog-centered">
             <div class="modal-content">
               <div class="modal-header">
                 <h5 class="modal-title" id="modalToggleLabel">PURGING DATABASE</h5>
                 <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
               </div>
               <div class="modal-body">
                 Are you sure?
               </div>
               <div class="modal-footer">
                 <a href="/database/purge">
                   <button class="btn btn-danger" data-bs-target="#modalToggle2" data-bs-toggle="modal" data-bs-dismiss="modal">PURGE</button>
                 </a>
               </div>
             </div>
           </div>
         </div>
         <!-- Modal 2-->
       </div>
     </div>
     @Html.ValidationSummary()
    </div>
</div>
